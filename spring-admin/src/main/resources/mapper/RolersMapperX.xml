<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lc.mapper.RolersDao">
    <insert id="insertRoleObject">
        insert into sys_roles (name , note ,modifiedTime,modifiedUser)
                       values (#{name} , #{note},now() , null);
    </insert>
    <delete id="delteObjectById">
            delete from sys_roles
            where id = #{id}
    </delete>

    <select id="getRowCount" resultType="java.lang.Integer">
        select count(*) from sys_roles
    </select>

    <select id="findPageObj" resultType="com.lc.pojo.Rolers">
        select * from sys_roles
        <where>
            <if test="name != null and name !=''">
                name like concat("%",#{name},"%")
            </if>
        </where>
        order by createdUser desc
        limit #{startIndex} , #{pageSize}
    </select>
    <select id="findObjectById" resultType="com.lc.pojo.Rolers">
        select * from sys_roles
        where id = #{id}
    </select>


</mapper>